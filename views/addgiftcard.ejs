    <!-- START #main -->
    <main id="main">
        <section style="margin-top: 1rem; margin-bottom: 12rem;">
            <div style="width: 25rem; margin-top: 4rem;" class="container">
                <% if (success){ %>
                    <div id="alert-border-3" class="msg msg-success msg-success-text"> <i class="fa-solid fa-circle-check"
                    style="color: #33b300; margin-right: 5px;"></i>
                      <span>Gift card has been added to wallet!</span>
                    </div>
                <% } %>
                <% if (err) { %>
                    <div id="alert-border-2" class="msg msg-danger msg-danger-text"> <i class="fa-solid fa-circle-exclamation"
                    style="color: #c9302c; margin-right: 3px;"></i> <span>You seem to have entered an invalid gift card details. Please enter the correct gift card details.
                      </span>
                    </div>
                <% } %>
                <div style="background-color: #ffd900; height: 8rem;  border: 0.5px; font-weight: 500;" class="mb-5 card shadow">
                    <h3 style="margin: 10px;">eazy-Wallet</h3>
                    <span style="margin: 10px; margin-top: 20px;">Available Balance: <span 
                            style="color: rgb(0, 172, 0);">&#8377;<%= balance %></span></span>
                </div>
                <form action="/addgiftcard" method="POST">
                    <div class="mb-3">
                        <h4 style="margin-bottom: 2rem;">Add gift card to balance</h4>
                        <label style="margin-bottom: 7px;" for="">Voucher Number</label>
                        <input name="id" autocomplete="off" maxlength="17" minlength="17" style="margin-bottom: 15px;" type="text"
                            class="form-control form-control-lg shadow-sm" required placeholder="e.g. YA23-ADA32B-VA12V"
                            id="inputBox" oninput="formatInput(this.value)"  >
                        <label style="margin-bottom: 7px;">Voucher PIN</label>
                        <input  name="pin" required type="password" id="numberInput" maxlength="6" class="form-control form-control-lg shadow-sm" placeholder="••••••">
                        <div style="margin-top: 4rem;" class="text-center">
                            <button style="background-color: #ffd900; border-radius: 15px;" class="btn btn-lg shadow">Add
                                balance</button>
                        </div>
                    </div>
                </form>

            </div>
        </section>
    </main><!-- End #main -->

