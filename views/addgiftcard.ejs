        <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
        <script>
            function formatInput(input) {
                // Remove all hyphens from the input
                input = input.replace(/-/g, '');

                // Insert hyphens after the fourth character and after the eleventh character
                if (input.length > 4) {
                    input = input.slice(0, 4) + '-' + input.slice(4);
                }
                if (input.length > 11) {
                    input = input.slice(0, 11) + '-' + input.slice(11);
                }

                // Capitalize the input
                input = input.toUpperCase();

                // Update the input value
                document.getElementById('inputBox').value = input;
            }
        </script>
        <script>
            const input = document.getElementById('numberInput');

            // Attach an input event listener to the input field
            input.addEventListener('input', function (event) {
                // Get the entered value and remove any non-numeric characters
                let value = event.target.value.replace(/\D/g, '');

                // Limit the length of the input to 6 digits
                value = value.slice(0, 6);

                // Update the input field value
                event.target.value = value;
            });
            function subscribeClick(e) {
                e.preventDefault();
                document.getElementById("subscribe_form").reset();
                Swal.fire(
                    'Hurray! Subscribed!',
                    '',
                    'success'
                )
                return false;
            }
            const d = new Date();
            let year = d.getFullYear();
            document.getElementById("year").innerHTML = year;
        </script>

