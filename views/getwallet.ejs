    <!-- Template Main CSS File -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="assets/css/book.css" rel="stylesheet">
    <link href="assets/css/style.css" rel="stylesheet">

</head>
<style>
    #features {
        padding: 15% 15%;
        background-color: #fff;


    }

    .feature-box {
        padding: 5%;
        text-align: center;
    }

    .icon {
        color: #0039d6;
        ;
        margin-bottom: 1rem;
    }

    .icon:hover {
        color: #0066ff;
    }

    @media (min-width : 1200px) {
        .custom {
            margin-top: -155px;
        }

        .faq-custom {
            width: 40rem;
        }
    }

    .animated {
        animation: up-down 2s ease-in-out infinite alternate-reverse both;
    }

    .gradient-custom {
        background: hsla(191, 75%, 60%, 1);

        background: linear-gradient(90deg, hsla(191, 75%, 60%, 1) 0%, hsla(248, 87%, 36%, 1) 100%);

        background: -moz-linear-gradient(90deg, hsla(191, 75%, 60%, 1) 0%, hsla(248, 87%, 36%, 1) 100%);

        background: -webkit-linear-gradient(90deg, hsla(191, 75%, 60%, 1) 0%, hsla(248, 87%, 36%, 1) 100%);
    }

    .my-card {
        background: linear-gradient(white, white) padding-box,
            linear-gradient(to right, hsla(191, 75%, 60%, 1), hsla(248, 87%, 36%, 1)) border-box;
        border-radius: 50em;
        border: 4px solid transparent;
    }
</style>

<body>

    <!-- ======= Header ======= -->
    <header style="background-color: #01036f;" id="header"
        class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1><a href="/"><img style="margin-bottom: 0.5rem;" width="37px" src="assets/img/favicon.png"
                            alt="logo"><span>EazyBus</span></a></h1>

            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="/">Home</a></li>
                    <li class="dropdown"><a href="#"><span>My Account</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="/bookings">Trips<i class="fa-solid fa-suitcase-rolling"></i></a></li>
                            <li><a href="/profile">Profile<i class="fa-solid fa-user"></i></a></li>
                            <li><a href="/wallet">Wallet<i class="fa-solid fa-wallet"></i></a></li>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->



    <!-- START #main -->
    <main id="main">
        <section style="margin-top: 2rem; margin-bottom: 2rem;">
            <div class="container text-center">
                <div class="row">
                    <div style="margin-bottom: 3rem;" class="col-sm-6">
                        <h1 style="margin-top: 5rem; font-weight: bold; font-size: 4rem; color: #0039d6;">Introducing
                           the </h1>
                        <h1 style="margin-top: 0.5rem; font-weight: bold; font-size: 4.5rem; color: #0039d6;">
                            eazy-Wallet
                        </h1>
                        <h4 style="font-weight: 600; color: #0039d6; margin-top: 1rem;">Payments made easy!</h4>
                        <div>
                            <span style="margin-right: 5px; font-weight: 500;">In collabration with</span>
                            <img width="30" height="30" src="https://img.icons8.com/color/30/000000/mastercard-logo.png"
                                alt="mastercard-logo" />
                        </div>
                    </div>
                    <div style="margin-top: 2rem;" class="col-sm-6 animated">
                        <img style="width: 25rem;"
                            src="https://i.ibb.co/rpXzGN2/3d-illustration-wallet-with-coins-credit-cards.jpg"
                            alt="Your Image">
                    </div>
                </div>
            </div>
        </section>
        <section class="custom" id="features">
            <div class="row container text-center">
                <div class="feature-box col-lg-4">
                    <i class="icon fa-solid fa-circle-check fa-4x"></i>
                    <h3>Easy to use</h3>
                    <p>One-Click hassle-free bookings</p>
                </div>
                <div class="feature-box col-lg-4">
                    <i class="icon fa-solid fa-lock fa-4x"></i>
                    <h3>Secure</h3>
                    <p>Secure e-wallet payments</p>
                </div>
                <div class="feature-box col-lg-4">
                    <i class="icon fa-solid fa-circle-dollar-to-slot fa-4x"></i>
                    <h3>Instant Refunds</h3>
                    <p>Refunds are proccessed instantly</p>
                </div>
            </div>
        </section>

        <section style="margin-bottom: 4rem;" class="custom">
            <div class="accordion container faq-custom" id="accordionExample">
                <div style="border-radius: 15px;" class="card my-card shadow-2-strong">
                    <h1 style="margin-bottom: 2rem; font-weight: bold; color: #000000; margin-top: 2rem;"
                        class="text-center">Features of eazy-Wallet</h1>
                    <div style="margin-left: 1rem; margin-right: 1rem;" class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <span style="font-weight: 700;">What is eazy-Wallet?</span>
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show"
                            data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <span>The eazy-Wallet is a digital wallet that allows you to store funds securely within
                                    your
                                    account. It offers a convenient and quick way to make payments for bus tickets
                                    without the
                                    need to enter your payment details each time you book.</span>
                            </div>
                        </div>
                    </div>
                    <div style="margin-left: 1rem; margin-right: 1rem;" class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                <span style="font-weight: 700;">How do I add funds to my
                                    eazy-Wallet?</span>
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <span>To add funds to your eazy-Wallet, log in to your eazybus account and navigate to
                                    the
                                    E-Wallet section. Choose the "Add Funds" option and add the amount and complete the
                                    payment
                                    using credit card,debit card or net banking.</span>
                            </div>
                        </div>
                    </div>
                    <div style="margin-left: 1rem; margin-right: 1rem;" class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                <span style="font-weight: 700;">Is my eazy-Wallet balance transferable
                                    to another user?</span>
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <span>No, the balance in your eazy-Wallet is non-transferable. It can only be used for
                                    your own
                                    bus ticket bookings on our platform and cannot be transferred to another user's
                                    account.</span>
                            </div>
                        </div>
                    </div>
                    <div style="margin-left: 1rem; margin-right: 1rem; margin-bottom: 2rem;" class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                <span style="font-weight: 700;">What happens when i cancel a booking
                                    made using eazy-Wallet?</span>
                            </button>
                        </h2>
                        <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <span>The booking amount is refunded back instantly to your wallet.</span>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                    <span style="font-weight: 700;">Who is eligbile for
                                        eazy-Wallet?</span>
                                </button>
                            </h2>
                            <div id="collapseFive" class="accordion-collapse collapse"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <span>Currently, eazy-Wallet is available to only selected users on invite-only
                                        basis. You can
                                        join the waitlist to increase your chances of getting access to
                                        eazy-Wallet.</span>
                                </div>
                            </div>
                        </div>
                    </div>

        </section>
        <section class="container gradient-custom"
            style="background-color: black; margin-bottom: 3rem; width: 90%; border-radius: 30px;">
            <div class="container text-center">
                <h1 style="font-weight: bold; font-size: 2rem; color: rgb(245, 245, 245); margin-bottom: 2rem;">You are
                    invited for early access to use eazy-Wallet!</h1>
                <a href="/applywallet">
                    <button style="background-color: #000000; border: none; border-radius: 15px;"
                        class="btn btn-primary btn-lg">Apply Now!</button>
                </a>
            </div>
        </section>

    </main><!-- End #main -->

    <!-- ======= Footer ======= -->
    <%- include("partials/footer"); -%>
        <!-- End Footer -->

        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                class="bi bi-arrow-up-short"></i></a>
        <div id="preloader"></div>

        <!-- Vendor JS Files -->
        <script src="https://code.jquery.com/jquery-3.6.4.js"
            integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/3ea55f06b5.js" crossorigin="anonymous"></script>
        <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
        <script src="assets/vendor/aos/aos.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>

        <script>
            function subscribeClick(e) {
                e.preventDefault();
                document.getElementById("subscribe_form").reset();
                Swal.fire(
                    'Hurray! Subscribed!',
                    '',
                    'success'
                )
                return false;
            }
            const d = new Date();
            let year = d.getFullYear();
            document.getElementById("year").innerHTML = year;
        </script>

</body>

