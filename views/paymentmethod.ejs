</head>

<body onload="timer()">

    <!-- ======= Header ======= -->
    <header style="background-color: #01036f;" id="header"
        class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1><a href="/"><img style="margin-bottom: 0.5rem;" width="37px" src="assets/img/favicon.png"
                            alt="logo"><span>EazyBus</span></a></h1>

            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="/">Home</a></li>
                    <li class="dropdown"><a href="#"><span>My Account</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="/bookings">Trips<i class="fa-solid fa-suitcase-rolling"></i></a></li>
                            <li><a href="/profile">Profile<i class="fa-solid fa-user"></i></a></li>
                            <li><a href="/wallet">Wallet<i class="fa-solid fa-wallet"></i></a></li>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->

    <style>
        .myDiv {
            display: block;
        }

        .myHR {
            margin-top: 7.7rem;
        }

        @media (max-width: 575px) {
            .myDiv {
                display: block;
                text-align: center;
            }

            .myHR {
                margin-top: 1.6rem;
            }
        }
    </style>

    <!-- START #main -->
    <main id="main">
        <% const fare=parseInt(foundD.bill_amount) %>
            <% function calculatePercentage(number, percentage) { %>
                <% return Math.round(number * (percentage / 100)); %>
                    <% } %>
                        <% const tax=calculatePercentage(fare, 18); %>
                            <% const taxRound=tax.toFixed(1); %>
                                <% const taxHalf=taxRound / 2 %>
                                    <% const abT=Math.round(fare - tax); %>
                                        <% const abtRound=abT.toFixed(1); %>
                                            <section style="margin-top: 1rem; margin-bottom: 6rem;">
                                                <div class="container">

                                                    <div class="py-5 text-center">
                                                        <h2 style="font-weight: 800; font-size: 3vh;">
                                                            Payment Summary</h2>
                                                    </div>
                                                    <div id="time-alert">
                                                        <div class="msg msg-danger msg-danger-text"> <i
                                                                class="fa-solid fa-clock"
                                                                style="color: #c9302c; margin-right: 10px;"></i> Please
                                                            complete the payment within <span id="timer">06:00</span>
                                                            minutes </div>
                                                    </div>
                                                    <div id="alert-1" style="display: none;">
                                                        <div class="msg msg-warning msg-warning-text"> <i
                                                                class="fa-solid fa-triangle-exclamation fa-lg"
                                                                style="color: #ffdd00; margin-right: 10px;"></i> Please
                                                            select a payment method. </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-4 order-md-2 mb-4">
                                                            <h4
                                                                class="d-flex justify-content-between align-items-center mb-3 myDiv">
                                                                <span style="font-weight: 600;" class="text-muted">Fare
                                                                    Breakup</span>
                                                            </h4>
                                                            <ul class="list-group mb-3">
                                                                <li
                                                                    class="list-group-item d-flex justify-content-between lh-condensed">
                                                                    <div>
                                                                        <h6 class="my-0">Base Fare</h6>
                                                                        <small class="text-muted">Ticket x <%=
                                                                                foundD.seats.length %></small>
                                                                    </div>
                                                                    <span class="text-muted">
                                                                        <%= abtRound %>
                                                                    </span>
                                                                </li>
                                                                <li
                                                                    class="list-group-item d-flex justify-content-between lh-condensed">
                                                                    <div>
                                                                        <h6 class="my-0">Tax</h6>
                                                                        <small class="text-muted">CGST 9%</small>
                                                                    </div>
                                                                    <span class="text-muted">+<%= taxHalf %></span>
                                                                </li>
                                                                <li
                                                                    class="list-group-item d-flex justify-content-between lh-condensed">
                                                                    <div>
                                                                        <h6 class="my-0">Tax</h6>
                                                                        <small class="text-muted">SGST 9%</small>
                                                                    </div>
                                                                    <span class="text-muted">+<%= taxHalf %></span>
                                                                </li>
                                                                <li
                                                                    class="list-group-item d-flex justify-content-between">
                                                                    <span style="font-weight: 700;">Total</span>
                                                                    <strong>&#8377;<%= foundD.bill_amount %></strong>
                                                                </li>
                                                            </ul>

                                                        </div>
                                                        <form></form>
                                                        <div class="col-md-8 order-md-1">

                                                            <h4 style="font-weight: 600;" class="mb-3 myDiv">Payment
                                                                Method</h4>
                                                            <!-- <div id="timer">06:00</div> -->
                                                            <button id="redirectButton" style="display: none;"
                                                                onclick="redirectToHome()">Redirect to
                                                                Home</button>


                                                            <form id="paymentForm" action="#" method="POST">
                                                                <div class="d-block my-3 myDiv">
                                                                    <div style="margin-top: 2rem;" class="row">
                                                                        <div class="col">
                                                                            <div style="width: 17rem;" class="btn-group"
                                                                                data-toggle="buttons">
                                                                                <label
                                                                                    class="btn btn-outline-dark btn-payment">
                                                                                    <input onclick="myFunction()"
                                                                                        type="radio"
                                                                                        name="paymentMethod"
                                                                                        value="create-checkout-session"
                                                                                        autocomplete="off"> <i
                                                                                        class="fa-brands fa-cc-stripe"
                                                                                        style="color: #9900ff;"></i>
                                                                                    Credit/Debit Card
                                                                                </label>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="row mt-3">
                                                                        <div class="col">
                                                                            <% if (wallet !=null) { %>
                                                                                <% if (wallet.balance < fare) { %>
                                                                                    <div style="width: 17rem;"
                                                                                        class="btn-group"
                                                                                        data-toggle="buttons">
                                                                                        <label
                                                                                            class="btn btn-outline-dark btn-payment disabled">

                                                                                            <input
                                                                                                onclick="myFunction()"
                                                                                                type="radio"
                                                                                                name="paymentMethod"
                                                                                                value="checkout-wallet"
                                                                                                autocomplete="off">
                                                                                            <i class="fa-solid fa-wallet"
                                                                                                style="color: #9900ff;"></i>
                                                                                            eazy-Wallet - &#8377;<%=
                                                                                                wallet.balance %>
                                                                                        </label>
                                                                                    </div>
                                                                                    <div class="myDiv">
                                                                                        <label
                                                                                            style="color: red; font-size: 13px; margin-left: 5px;">Insufficient
                                                                                            wallet balance</label>
                                                                                    </div>
                                                                                    <% } else { %>
                                                                                        <div style="width: 17rem;"
                                                                                            class="btn-group"
                                                                                            data-toggle="buttons">
                                                                                            <label
                                                                                                class="btn btn-outline-dark btn-payment">
                                                                                                <input
                                                                                                    onclick="myFunction()"
                                                                                                    type="radio"
                                                                                                    name="paymentMethod"
                                                                                                    value="checkout-wallet"
                                                                                                    autocomplete="off">
                                                                                                <img width="26"
                                                                                                    height="25"
                                                                                                    src="https://img.icons8.com/fluency/30/000000/coin-wallet.png"
                                                                                                    alt="wallet" />
                                                                                                eazy-Wallet - &#8377;<%=
                                                                                                    wallet.balance %>
                                                                                            </label>
                                                                                        </div>
                                                                                        <% } %>
                                                                                            <% } else { %>
                                                                                                <div style="width: 17rem;"
                                                                                                    class="btn-group"
                                                                                                    data-toggle="buttons">
                                                                                                    <label
                                                                                                        class="btn btn-outline-dark btn-payment disabled">

                                                                                                        <input
                                                                                                            onclick="myFunction()"
                                                                                                            type="radio"
                                                                                                            name="paymentMethod"
                                                                                                            value="checkout-wallet"
                                                                                                            autocomplete="off">
                                                                                                        <img width="26"
                                                                                                            height="25"
                                                                                                            src="https://img.icons8.com/fluency/30/000000/coin-wallet.png"
                                                                                                            alt="wallet" />
                                                                                                        eazy-Wallet
                                                                                                    </label>
                                                                                                </div>
                                                                                                <div class="myDiv">
                                                                                                    <label
                                                                                                        style="color: red; font-size: 13px; margin-left: 5px;">Wallet
                                                                                                        payment is not
                                                                                                        availabe</label>
                                                                                                </div>
                                                                                                <% } %>
                                                                        </div>
                                                                    </div>

                                                                    <hr class="mb-4 myHR">
                                                                    <div class="text-center">
                                                                        <button
                                                                            style="background-color: #01036f; border: none;"
                                                                            class="btn btn-primary btn-lg btn-block"
                                                                            type="submit">Pay
                                                                            &#8377;<%= foundD.bill_amount %></button>
                                                                    </div>
                                                                    <div>
                                                            </form>

                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
    </main><!-- End #main -->

    <!-- ======= Footer ======= -->
    <%- include("partials/footer"); -%>
        <!-- End Footer -->

        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                class="bi bi-arrow-up-short"></i></a>
        <div id="preloader"></div>

        <!-- Vendor JS Files -->
        <script src="https://code.jquery.com/jquery-3.6.4.js"
            integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/3ea55f06b5.js" crossorigin="anonymous"></script>
        <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
        <script src="assets/vendor/aos/aos.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
        <script>
            // Set the timer duration to 6 minutes (in seconds)
            const duration = 6 * 60;

            // Get the timer element
            const timerElement = document.getElementById('timer');

            // Start the timer
            let timer = duration;
            let minutes, seconds;

            setInterval(() => {
                // Calculate the minutes and seconds
                minutes = Math.floor(timer / 60);
                seconds = timer % 60;

                // Format the minutes and seconds to display with leading zeros
                minutes = minutes < 10 ? `0${minutes}` : minutes;
                seconds = seconds < 10 ? `0${seconds}` : seconds;

                // Update the timer display
                timerElement.textContent = `${minutes}:${seconds}`;

                // Decrement the timer
                timer--;

                // Check if the timer has reached 0
                if (timer < 0) {
                    // Timer has ended
                    clearInterval();
                    timerElement.textContent = '00:00';

                    // Perform any desired actions here
                    redirectButton.click();
                }
            }, 1000);

        </script>
        <script>
            const paymentButtons = document.querySelectorAll('.btn-payment');
            const paymentForm = document.getElementById('paymentForm');

            paymentForm.addEventListener('submit', (event) => {
                const selectedPayment = document.querySelector('input[name="paymentMethod"]:checked');
                if (!selectedPayment) {
                    event.preventDefault(); // Prevent form submission
                    $('#alert-1').show();
                    $(window).scrollTop(0);
                }
            });
            function myFunction() {
                $('#alert-1').hide()
            }
            paymentButtons.forEach(button => {
                button.addEventListener('click', () => {
                    paymentButtons.forEach(btn => {
                        btn.classList.remove('active');
                    });
                    button.classList.add('active');
                    const paymentMethod = button.querySelector('input').value;
                    paymentForm.action = `/${paymentMethod}`;
                });
            });
        </script>
        <script>

            function subscribeClick(e) {
                e.preventDefault();
                document.getElementById("subscribe_form").reset();
                Swal.fire(
                    'Hurray! Subscribed!',
                    '',
                    'success'
                )
                return false;
            }
            const d = new Date();
            let year = d.getFullYear();
            document.getElementById("year").innerHTML = year;
        </script>

</body>

