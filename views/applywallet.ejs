<body>

    <!-- ======= Header ======= -->
    <header style="background-color: #01036f;" id="header"
        class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1><a href="/"><img style="margin-bottom: 0.5rem;" width="37px" src="assets/img/favicon.png"
                            alt="logo"><span>EazyBus</span></a></h1>

            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="/">Home</a></li>
                    <li class="dropdown"><a href="#"><span>My Account</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="/bookings">Trips<i class="fa-solid fa-suitcase-rolling"></i></a></li>
                            <li><a href="/profile">Profile<i class="fa-solid fa-user"></i></a></li>
                            <li><a href="/wallet">Wallet<i class="fa-solid fa-wallet"></i></a></li>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->



    <!-- START #main -->
    <main id="main">
        <section style="margin-top: 2rem; margin-bottom: 1px;">
            <div class="container text-center">
                <div>
                    <div style="margin-bottom: 3rem;">
                        <h1 style="margin-top: 1rem; font-weight: bold; font-size: 4.5rem; color: #0039d6;">eazy-Wallet
                        </h1>
                        <h4 style="font-weight: 600; color: #0039d6; margin-top: 1rem;">Payments made easy!</h4>
                        <div>
                            <span style="margin-right: 5px; font-weight: 500;">In collabration with</span>
                            <img width="30" height="30" src="https://img.icons8.com/color/30/000000/mastercard-logo.png"
                                alt="mastercard-logo" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section style=" border-radius: 30px; margin-bottom: 6rem;" class="gradient-custom container card-custom">
            <div class="container">
                <div class="row justify-content-center align-items-center">
                    <div style=" width: 30rem;">
                        <div class="card shadow-2-strong card-registration " style="border-radius: 15px;">
                            <div class="card-body p-4 p-md-5">
                                <h4 style="font-weight: bold;"
                                    class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Apply for
                                    eazy-Wallet!</h4>
                                <form method="post" action="/applywallet" onsubmit="return checkPAN(event)">
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Full Name (As per
                                            PAN)</label>
                                        <input id="nameINPUT" name="name" oninput="convertToUppercaseName()" required minlength="3" maxlength="30" type="text" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputPassword1" class="form-label">PAN Number</label>
                                        <input name="pan" onchange="validateInput()" oninput="convertToUppercase()" id="myInput" minlength="10" maxlength="10"
                                            required type="text" class="form-control">
                                        <label id="pan_wrong"
                                            style="font-size: 12px; color: red; display: none; margin-top: 5px;"
                                            for="">Please enter valid PAN Number</label>
                                    </div>
                                    <div class="mb-3 form-check">
                                        <input oninvalid="this.setCustomValidity('Please agree to terms and conditions')"
                                        oninput="setCustomValidity('')" required type="checkbox" class="form-check-input"">
                                      <label class=" form-check-label" for="exampleCheck1">I agree to terms and
                                        condition and privacy policy</label>
                                    </div>
                                    <div style="margin-top: 2rem;" class="text-center">
                                        <button style="background-color: #0039d6; border: none;" type="submit"
                                            class="btn btn-primary">Apply</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->

    <!-- ======= Footer ======= -->
