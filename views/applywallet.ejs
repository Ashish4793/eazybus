<style>
    #features {
        padding: 15% 15%;
        background-color: #fff;


    }

    .feature-box {
        padding: 5%;
        text-align: center;
    }

    .icon {
        color: #531bec;
        margin-bottom: 1rem;
    }

    .icon:hover {
        color: #3200e7;
    }

    @media (min-width : 1200px) {
        .custom {
            margin-top: -155px;
        }

        .faq-custom {
            width: 40rem;
        }

        .card-custom {
            width: 40rem;
        }
    }


    .animated {
        animation: up-down 2s ease-in-out infinite alternate-reverse both;
    }

    .gradient-custom {
