            crossorigin="anonymous"></script>
        <script src="assets/vendor/aos/aos.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
        <script>
            function convertToUppercase() {
                var input = document.getElementById("myInput");
                input.value = input.value.toUpperCase();
            }
            function convertToUppercaseName() {
                var input = document.getElementById("nameINPUT");
                input.value = input.value.toUpperCase();
            }
            function validateInput() {
                var input = document.getElementById("myInput").value;
                var regex = /^[A-Za-z]{5}\d{4}[A-Za-z]$/;

                if (regex.test(input)) {
                    document.getElementById("pan_wrong").style.display = "none";
                } else {
                    document.getElementById("pan_wrong").style.display = "block";
                }
            }
            function checkPAN(event){
                var input = document.getElementById("myInput").value;
                var regex = /^[A-Za-z]{5}\d{4}[A-Za-z]$/;

                if (regex.test(input)) {
                    document.getElementById("pan_wrong").style.display = "none";
                    return true;
                } else {
                    event.preventDefault();
                    document.getElementById("pan_wrong").style.display = "block";
                    return false;
                }
            }
        </script>
        <script>
            function subscribeClick(e) {
                e.preventDefault();
                document.getElementById("subscribe_form").reset();
                Swal.fire(
                    'Hurray! Subscribed!',
                    '',
                    'success'
                )
                return false;
            }
            const d = new Date();
            let year = d.getFullYear();
            document.getElementById("year").innerHTML = year;
        </script>

