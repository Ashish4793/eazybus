<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>EazyBus</title>
    <meta name="theme-color" content="#010483">
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="assets/css/book.css" rel="stylesheet">
    <link href="assets/css/style.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3ea55f06b5.js" crossorigin="anonymous"></script>
</head>
<style>
    hr {
        border-top: 1px solid #b4b4b4;
        margin: 20px 0;
    }

    .btn-primary {
        background-color: #010483;
        border-color: #010483;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #1f1f7e;
        border-color: #1f1f7e;
    }
</style>

<body>

    <!-- ======= Header ======= -->
    <header style="background-color: #01036f;" id="header"
        class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1><a href="/"><img style="margin-bottom: 0.5rem;" width="37px" src="assets/img/favicon.png" alt="logo"><span>EazyBus</span></a></h1>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="/">Home</a></li>
                    <li class="dropdown"><a href="#"><span>My Account</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="/bookings">Trips<i class="fa-solid fa-suitcase-rolling"></i></a></li>
                            <li><a href="/profile">Profile<i class="fa-solid fa-user"></i></a></li>
                            <li><a href="/wallet">Wallet<i class="fa-solid fa-wallet"></i></a></li>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->

    <!-- START #main -->
    <main id="main">
        <section>
            <% function myFunction(time){ %>
                <% let a; %>
                    <%if (time> "11:59" && time < "23:59" ){ %>
                            <% a=" PM" ; %>
                                <%} else { %>
                                    <%a=" AM" ; %>
                                        <%} %>
                                            <%const final=time + a; %>%>
                                                <%return final; %>
                                                    <%}%>
                                                        <% const dep_time=myFunction(details.dep_time) %>
                                                            <% const arr_time=myFunction(details.arr_time) %>
                                                                <div style="margin-top: 3rem;">
                                                                    <div class="container">
                                                                        <div class="row content">
                                                                            <form action="/backtoseat" method="POST">
                                                                                <button
                                                                                    style="background-color: transparent; color: #000000; border: none; font-size: 12px;"
                                                                                    type="submit"
                                                                                    class="btn btn-primary"><i
                                                                                        style="margin-right: 4px;"
                                                                                        class="fa-solid fa-arrow-left fa-sm"
                                                                                        style="color: #000000;"></i>Go
                                                                                    Back</button>
                                                                            </form>
                                                                        </div>
                                                                        <div>
                                                                            <h1 class="text-center">Booking Summary</h1>
                                                                        </div>
                                                                        <hr>
                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <h4
                                                                                    style="color: #010483; margin-bottom: 1rem;">
                                                                                    Passenger Details</h4>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Name:</span>
                                                                                    <%= details.pax_name %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Phone
                                                                                        Number:</span>
                                                                                    <%= details.pax_phone %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Age:</span>
                                                                                    <%= details.pax_age %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Gender:</span>
                                                                                    <%= details.pax_gender %>
                                                                                </p>
                                                                                <hr>
                                                                                <h4
                                                                                    style="color: #010483; margin-bottom: 1rem;">
                                                                                    Bus Details</h4>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Service
                                                                                        No:</span>
                                                                                    <%= details.service_no %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Bus-Type:</span>
                                                                                    <%= details.bus_type %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Route:</span>
                                                                                    <%= details.origin %> to <%=
                                                                                            details.destination %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6">
                                                                                <h4
                                                                                    style="color: #010483; margin-bottom: 1rem;">
                                                                                    Booking Details</h4>
                                                                                
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Departure
                                                                                        Date:</span>
                                                                                    <%= details.dep_date%>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Departure
                                                                                        Time:</span>
                                                                                    <%= dep_time %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Arrival
                                                                                        Time:</span>
                                                                                    <%= arr_time %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Seat
                                                                                        Number:</span>
                                                                                    <%= details.seats %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Boarding
                                                                                        Point <i
                                                                                            class="fa-solid fa-location-dot fa-sm"
                                                                                            style="color: #000000;"></i>
                                                                                        :</span>
                                                                                    <%= details.boarding_point %>
                                                                                </p>
                                                                                <p><span
                                                                                        style="font-weight: 600; color: black;">Drop
                                                                                        Point <i
                                                                                            class="fa-solid fa-location-dot fa-sm"
                                                                                            style="color: #000000;"></i>
                                                                                        :</span>
                                                                                    <%= details.drop_point %>
                                                                                </p>
                                                                            </div>
                                                                        </div>
                                                                        <hr>
                                                                        <div class="text-center">
                                                                            <h4
                                                                                style="color: #010483; margin-bottom: 1rem;">
                                                                                Total Fare: &#8377;<%=
                                                                                    details.bill_amount %>
                                                                            </h4>
                                                                            <form onsubmit="vibrate()" action="/paymentform"
                                                                                method="post">
                                                                                <button type="submit"
                                                                                    class="btn btn-success">Proceed to
                                                                                    Checkout</button>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
        </section>
    </main><!-- End #main -->

    <!-- ======= Footer ======= -->
    <%- include("partials/footer"); -%>
        <!-- End Footer -->

        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                class="bi bi-arrow-up-short"></i></a>
        <div id="preloader"></div>

        <!-- Vendor JS Files -->
        <script src="https://code.jquery.com/jquery-3.6.4.js"
            integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/3ea55f06b5.js" crossorigin="anonymous"></script>
        <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
        <script src="assets/vendor/aos/aos.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
        <script>
            function vibrate(){
                navigator.vibrate(100);
            }
            function subscribeClick(e) {
                e.preventDefault();
                document.getElementById("subscribe_form").reset();
                Swal.fire(
                    'Hurray! Subscribed!',
                    '',
                    'success'
                )
                return false;
            }
            const d = new Date();
            let year = d.getFullYear();
            document.getElementById("year").innerHTML = year;
        </script>
</body>

</html>