<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Google Fonts -->
	<link
		href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
		rel="stylesheet">
	<link rel="shortcut icon" href="assets/img/favicon.png" type="image/x-icon">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
	<link href="assets/css/book.css" rel="stylesheet">
	<link href="assets/css/style.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
		crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery-3.6.4.js"
		integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
	<script src="https://cdn.tailwindcss.com"></script>
	<script src="https://kit.fontawesome.com/3ea55f06b5.js" crossorigin="anonymous"></script>
	<script src="assets/js/tailwind.config.js"></script>
	<title>EazyBus</title>
</head>

<body>
	<section class="bg-gray-50 dark:bg-gray-900">
		<div style="margin-bottom: 4rem;"
			class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
			<a href="/" style="font-weight: 700; margin-top: 1rem; color: #000;"
				class="headtag flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
				<img style="width: 40px;" src="assets/img/favicon.png" alt="eazybus logo">
				eazybus
			</a>
			<% if (uaxError===true) { %>
				<div style="width: 28rem;" id="uaxAlert" class="msg msg-danger msg-danger-text"> <i class="fa-solid fa-circle-exclamation"
					style="color: #c9302c; margin-right: 6px;"></i> <span>An account already exists with this email address or phone number</span>
				</div>
				<% } %>
					<div
						class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
						<div class="p-6 space-y-4 md:space-y-6 sm:p-8">
							<h1
								class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
								Create a new account
							</h1>
							<form class="space-y-4 md:space-y-6" action="/register" method="POST">
								<div>
									<label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email
										</label>
									<input autocomplete="off" type="email" name="username" id="email"
										class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
										placeholder="johndoe@xyz.com" required="">
								</div>
								<div>
									<label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name
										</label>
									<input autocomplete="off" type="name" minlength="3" name="name" id="name"
										class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
										placeholder="John Doe" required="">
								</div>
								<div>
									<label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Phone
										Number</label>
									<input
										oninvalid="this.setCustomValidity('Phone number cannot contain alphabetic characters')"
										oninput="setCustomValidity('')" autocomplete="off" type="tel" minlength="10"
										maxlength="10" name="phone"
										class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
										placeholder="9999999999" pattern="[1-9]{1}[0-9]{9}" required="">
								</div>
								<div>
									<label for="default"
										class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Gender
									</label>
									<div style="margin-top: 1rem;" class="flex gap-x-6">
										<div class="flex">
										  <input onclick="vibrate()" required type="radio" name="gender" value="Male" class="shrink-0 mt-0.5 border-gray-200 rounded-full text-blue-600 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:checked:bg-blue-500 dark:checked:border-blue-500 dark:focus:ring-offset-gray-800" id="hs-radio-group-1">
										  <label for="gender" class="text-sm text-gray-500 ml-2 dark:text-gray-400">Male</label>
										</div>
									  
										<div class="flex">
										  <input onclick="vibrate()" required type="radio" name="gender" value="Female" class="shrink-0 mt-0.5 border-gray-200 rounded-full text-blue-600 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:checked:bg-blue-500 dark:checked:border-blue-500 dark:focus:ring-offset-gray-800" id="hs-radio-group-3">
										  <label for="gender" class="text-sm text-gray-500 ml-2 dark:text-gray-400">Female</label>
										</div>
									</div>
								</div>
								<div>
									<label for="password"
										class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password
										</label>
									<input id="password" autocomplete="off" minlength="6" maxlength="30" type="password"
										name="password" id="password" placeholder="••••••••"
										class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
										required="">
									<label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
										id="capsLockLabel"
										style="display: none; margin-top: 0.5rem; font-size: 12px;">Caps Lock is
										on</label>
								</div>
								<div class="flex items-center justify-between">
									<div class="flex items-start">
									</div>
								</div>
								<button onclick="vibrate()" type="submit"
									class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Create
									Account</button>
								<hr class="h-px my-8 bg-black border-0 dark:bg-gray-900">
								<div class="flex flex-col items-center justify-center">
									<a href="/auth/google">
										<button onclick="vibrate()" type="button"
											class="text-white bg-[#2c2c2c] hover:bg-[#1f1f1f]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-gray-500 dark:hover:bg-[#050708]/30 mr-2 mb-2">
											<img style="margin-right: 6px;" width="23px"
												src="https://img.icons8.com/color/35/000000/google-logo.png"
												alt="google-logo" />
											Sign up with Google
										</button>
									</a>
								</div>

								<p class="text-sm font-light text-gray-500 dark:text-gray-400">
									Already a user? <a onclick="vibrate()" href="/login"
										class="font-medium text-primary-600 hover:underline dark:text-primary-500">Login</a>
								</p>
							</form>
							<div style="font-size: 0.8rem;" class="copyright text-center">
								&copy; Copyright <span id="year"></span><span> EazyBus</span>
							</div>
						</div>
					</div>
		</div>
	</section>
</body>
<script>

	window.addEventListener("DOMContentLoaded", function () {
		var passwordField = document.getElementById("password");

		passwordField.addEventListener("keydown", function (event) {
			var key = event.keyCode ? event.keyCode : event.which;
			var isCapsLockOn = event.getModifierState && event.getModifierState("CapsLock");

			if (key !== 20 && isCapsLockOn) {
				capsLockLabel.style.display = "block";
			} else {
				capsLockLabel.style.display = "none";
			}
		});
	});


	function vibrate(){
		navigator.vibrate(100);
	}

	$(function () {
		setTimeout(function () { $("#uaxAlert").fadeOut(1000); }, 6000)
	});
	const d = new Date();
	let year = d.getFullYear();
	document.getElementById("year").innerHTML = year;
</script>

</html>