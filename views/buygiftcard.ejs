<body>

    <!-- ======= Header ======= -->
    <header style="background-color: #01036f;" id="header"
        class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1><a href="/"><img style="margin-bottom: 0.5rem;" width="37px" src="assets/img/favicon.png"
                            alt="logo"><span>EazyBus</span></a></h1>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="/">Home</a></li>
                    <li class="dropdown"><a href="#"><span>My Account</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="/bookings">Trips<i class="fa-solid fa-suitcase-rolling"></i></a></li>
                            <li><a href="/profile">Profile<i class="fa-solid fa-user"></i></a></li>
                            <li><a href="/wallet">Wallet<i class="fa-solid fa-wallet"></i></a></li>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->



    <!-- START #main -->
    <main id="main">
        <section style="margin-top: 1rem; margin-bottom: 4rem;">
            <div style="width: 25rem; margin-top: 4rem;" class="container">
                <!-- <div id="alert-border-3" class="msg msg-success msg-success-text"> <i class="fa-solid fa-circle-check"
                    style="color: #33b300; margin-right: 5px;"></i>
                  <span>Gift card has been added to wallet!</span>
                </div> -->
                <!-- <div id="alert-border-2" class="msg msg-danger msg-danger-text"> <i class="fa-solid fa-circle-exclamation"
                    style="color: #c9302c; margin-right: 3px;"></i> <span>You seem to have entered an invalid gift card details. Please enter the correct gift card details.
                    </span>
                </div> -->
                <div style="font-weight: 500;" class="mb-5">
                    <div class="card mygiftCard mx-auto shadow-lg p-1 mb-3">
                        <div class="card-body">
                            <h5 style="font-weight: 900;" class="card-title">eazyBus Gift Card</h5>
                            <div style="margin-top: 6rem;">
                                <h3 id="amount"></h3>
                            </div>
                        </div>
                    </div>
                </div>
                <form action="/create-giftcard-checkout" method="POST">
                    <div class="mb-3">
                        <h5 style="margin-bottom: 2rem;">Buy a gift card for your loved ones!</h5>
                        <div>
                            <label style="margin-bottom: 7px;" for="">Choose a amount</label>
                        </div>
                        <div style="display: inline-block; margin-bottom: 1rem;" class="btn-group" role="group"
                            aria-label="Denomination Buttons">
                            <button type="button" id="500btn" class="btn btn-outline-warning btn-sm shadow-sm"
                                onclick="updateDenomination(500)">₹500</button>
                            <button type="button" id="1000btn" class="btn btn-outline-warning active btn-sm shadow-sm"
                                onclick="updateDenomination(1000)">₹1000</button>
                            <button type="button" id="2000btn" class="btn btn-outline-warning btn-sm shadow-sm"
                                onclick="updateDenomination(2000)">₹2000</button>
                        </div>
                        <input onchange="getHeading()" name="faceValue" style="margin-bottom: 15px;" type="number" max="5000" min="500"
                            class="form-control form-control-lg shadow-sm" required  
                            id="amountBox">
                        <label style="margin-bottom: 7px;">Receiver's Name</label>
                        <input style="margin-bottom: 7px;" name="name" required type="text" id="name" minlength="2" maxlength="20"
                            class="form-control form-control-lg shadow-sm">
                        <label style="margin-bottom: 7px;">Receiver's Email</label>
                        <input style="margin-bottom: 7px;" name="email" required type="email" id="email"
                            class="form-control form-control-lg shadow-sm">
                        <label style="margin-bottom: 7px;">Gift Message</label>
                        <textarea name="giftMsg" class="form-control shadow-sm" rows="2"></textarea>
                        <div style="margin-top: 4rem;" class="text-center">
                            <button type="submit" style="background-color: #ffd900; width: 9rem; border-radius: 15px;"
                                class="btn btn-lg shadow">Pay Now</button>
                        </div>
                    </div>
                </form>

            </div>
        </section>
    </main><!-- End #main -->

    <!-- ======= Footer ======= -->
