            crossorigin="anonymous"></script>
        <script src="assets/vendor/aos/aos.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var userInput = "&#8377;" + 1000
                document.getElementById("amount").innerHTML = userInput
                document.getElementById("amountBox").value = 1000;
            });
            function getHeading() {
                var userInput = "&#8377;" + document.getElementById("amountBox").value;
                document.getElementById("amount").innerHTML = userInput;
                var buttons = document.getElementsByClassName("btn-outline-warning");
                for (var i = 0; i < buttons.length; i++) {
                    buttons[i].classList.remove("active");
                }
                if (document.getElementById("amountBox").value === "500") {
                    var button = document.getElementById("500btn");
                    button.classList.add("active");
                } else if (document.getElementById("amountBox").value === "1000") {
                    var button = document.getElementById("1000btn");
                    button.classList.add("active");
                } else if (document.getElementById("amountBox").value === "2000") {
                    var button = document.getElementById("2000btn");
                    button.classList.add("active");
                }
            }

            function updateDenomination(value) {
                var userInput = document.getElementById("amountBox");
                var heading = document.getElementById("amount");

                // Remove "active" class from all buttons
                var buttons = document.getElementsByClassName("btn-outline-warning");
                for (var i = 0; i < buttons.length; i++) {
                    buttons[i].classList.remove("active");
                }

                // Add "active" class to the clicked button
                event.target.classList.add("active");

                userInput.value = value;
                heading.innerHTML = "&#8377;" + value;
            }


            function subscribeClick(e) {
                e.preventDefault();
                document.getElementById("subscribe_form").reset();
                Swal.fire(
                    'Hurray! Subscribed!',
                    '',
                    'success'
                )
                return false;
            }
            const d = new Date();
            let year = d.getFullYear();
            document.getElementById("year").innerHTML = year;
        </script>

