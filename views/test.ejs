<style>
    .seating-map {
        flex-wrap: wrap;
        width: 20rem;
    }

    .seating-map-container {
        border: 2px solid #555555;
        border-radius: 20px;
        padding: 10px;
        display: block;
    }

    .myrow {
        display: flex;
        justify-content: center;
    }

    .seat {
        width: 4rem;
        height: 3rem;
        border: 1px solid black;
        border-radius: 10px;
        margin: 5px;
        cursor: pointer;
        position: relative;
    }

    .sleeper {
        width: 3rem;
        height: 6rem;
        border: 1px solid black;
        border-radius: 10px;
        margin: 5px;
        cursor: pointer;
        position: relative;
    }

    .selected {
        background-color: #1acc8d;
    }

    .booked {
        background-color: rgb(139, 139, 139);
        cursor: not-allowed;
        pointer-events: none
    }

    .seat-number {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .seat-gap {
        margin-right: 40px;
    }


    .not-show {
        border: none;
    }
</style>

