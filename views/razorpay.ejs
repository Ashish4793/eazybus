<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <link href="assets/img/favicon.png" rel="icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
</head>
<style>
  body{
    font-family: 'Poppins', sans-serif;
  }
    .loading {
  align-items: center;
  display: flex;
  justify-content: center;
  /* height: 100%;
  position: fixed;
  width: 100%; */
}


</style>
<body>
  <div style="text-align: center;">
    <img width="230px" height="160px" src="assets/img/new.png" alt="">

  </div>
    <h3 style="text-align: center; margin-top: 1rem;">Payment processing</h3>
   
    <div class="loading">
      
      <div>
        <div class="text-center mt-3 mb-3">
          <div class="spinner-border" role="status">
          </div>
        </div>
        <h6 class="mb-4"> Securely redirecting to Razorpay... </h6>
        
      </div>
      </div>
    </div>
    <div style="text-align: center;">
      <a target="_blank"> <img referrerpolicy="origin" src = "https://badges.razorpay.com/badge-light.png " style = "height: 60px; width: 143px;" alt = "Razorpay | Payment Gateway | Neobank"></a>    
    </div>
  <button style="display: none;" id="rzp-button1">Pay</button>

</body>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  var options = {
    "key": "rzp_test_L3nzVsRtormDfp",
    "amount": "<%- payload.bill_amount %>", 
    "currency": "INR",
    "name": "EazyBus",
    "description": "Bus Ticket",
    "image": "https://i.ibb.co/cwJZ39f/favicon.png",
    "order_id": "<%- order.id %>",
    "callback_url": "<%- domain %>/payment-callback",
    "prefill": { 
        "name": "<%- payload.pax_name %>"
    },
    "notes": {
        "Booking ID": "<%- payload.bookingID %>"
    },
    "theme": {
        "color": "#1424FF"
    }
};
var rzp1 = new Razorpay(options);
document.getElementById('rzp-button1').onclick = function(e){
    rzp1.open();
    e.preventDefault();
}
  window.onload = function(){
setTimeout(loadAfterTime, 3300)
};

function loadAfterTime() { 
  document.getElementById("rzp-button1").click();
}

</script>
</html>