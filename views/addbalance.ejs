<style>
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<body>

    <!-- ======= Header ======= -->
    <header style="background-color: #01036f;" id="header"
        class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1><a href="/"><img style="margin-bottom: 0.5rem;" width="37px" src="assets/img/favicon.png"
                            alt="logo"><span>EazyBus</span></a></h1>

            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="/">Home</a></li>
                    <li class="dropdown"><a href="#"><span>My Account</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="/bookings">Trips<i class="fa-solid fa-suitcase-rolling"></i></a></li>
                            <li><a href="/profile">Profile<i class="fa-solid fa-user"></i></a></li>
                            <li><a href="/wallet">Wallet<i class="fa-solid fa-wallet"></i></a></li>
                        </ul>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->



    <!-- START #main -->
    <main id="main">
        <section style="margin-top: 5rem; margin-bottom: 5rem;">
            <form action="/addbalance-checkout-session" method="POST" onsubmit="return checkFormAmount(event)">
                <div style="width: 400px; border: none;" class="card container">
                    <img width="366" height="250" src="https://i.ibb.co/tcxB0BC/22032857-63-Z-2112-w012-n001-19-C-p6-19.jpg"
                        alt="wallet-icon">
                    <h3 style="font-weight: 700; color: #01036f; margin-bottom: 1rem; margin-top: 1rem;">
                        Add Balance to Wallet
                    </h3>
    
                    <label style="margin-bottom: 7px;">Enter Amount</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span style="background-color: transparent; border-radius: 0;" class="input-group-text">&#x20B9;</span>
                        </div>
                        <input class="form-control shadow-none" style="width: 5rem;" id="amount" name="amount" onchange="checkAmount()" type="number" required class="form-control shadow-none" onkeydown="if(event.key==='.'){event.preventDefault();}"  oninput="event.target.value = event.target.value.replace(/[^0-9]*/g,'');">
                        <div>
                            <label id="amountAlert" style="color: red; font-size: 13px; display: none; margin-top: 6px;">Minimum amount should be between &#x20B9;100 - &#x20B9;5000</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark">Add Money</button>
                </div>
            </form>
            
        </section>
    </main><!-- End #main -->

    <!-- ======= Footer ======= -->
    <%- include("partials/footer"); -%>
        <!-- End Footer -->

        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                class="bi bi-arrow-up-short"></i></a>
        <div id="preloader"></div>

        <!-- Vendor JS Files -->
        <script src="https://code.jquery.com/jquery-3.6.4.js"
            integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/3ea55f06b5.js" crossorigin="anonymous"></script>
        <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
        <script src="assets/vendor/aos/aos.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
        <!-- Template Main JS File -->
        <script src="assets/js/main.js"></script>
        <script>
            function checkAmount(){
                const amount = document.getElementById("amount").value;
                const amountInt = parseInt(amount);
                if (amountInt < 100 || amountInt > 5000) {
                    document.getElementById("amountAlert").style.display = "block";
                } else {
                    document.getElementById("amountAlert").style.display = "none";
                }
            }
            
            function checkFormAmount(event){
                const amount = document.getElementById("amount").value;
                const amountInt = parseInt(amount);

                if (amountInt < 100 || amountInt > 5000) {
                    event.preventDefault();
                    document.getElementById("amountAlert").style.display = "block";
                    return false;
                } else {
                    document.getElementById("amountAlert").style.display = "none";
                    return true;
                } 
            }
        </script>
        <script>
            function subscribeClick(e) {
                e.preventDefault();
                document.getElementById("subscribe_form").reset();
                Swal.fire(
                    'Hurray! Subscribed!',
                    '',
                    'success'
                )
                return false;
            }
            const d = new Date();
            let year = d.getFullYear();
            document.getElementById("year").innerHTML = year;
        </script>

</body>

