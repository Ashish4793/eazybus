  <!-- START #main -->
  <main style="margin-bottom: 7rem;" id="main">
    <section style="padding-bottom: 0px;">
      <div class="container" style="display: none; margin-top: 3rem;" id="verifyAlert">
        <div class="msg msg-danger msg-danger-text"> <i class="fa-solid fa-circle-exclamation"
            style="color: #c9302c; margin-right: 10px;"></i> <span>Origin and Destination cannot be same!</span> </div>
      </div>
      <div style="margin-top: 2rem;" class="row justify-content-center">
        <div style="background-color: rgba(2, 5, 161, 0.91);;" class="bus_info booking-form">
          <form onsubmit="saveCookies()" action="/search=q?" method="post">
            <div class="row no-margin">
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">Origin</span>
                  <select id="origin" style="width: 100%;" required name="origin" onchange="verify()"
                    class="form-select cityinput" oninvalid="this.setCustomValidity('Please choose a city')"
                    oninput="setCustomValidity('')">
                    <% if (origin==="Indore" ) { %>
                      <option selected value="Indore">Indore</option>
                      <option value="Delhi">Delhi</option>
                      <option value="Mumbai">Mumbai</option>
                      <option value="Pune">Pune</option>
                      <option value="Chennai">Chennai</option>
                      <% } else if (origin==="Delhi" ){ %>
                        <option value="Indore">Indore</option>
                        <option selected value="Delhi">Delhi</option>
                        <option value="Mumbai">Mumbai</option>
                        <option value="Pune">Pune</option>
                        <option value="Chennai">Chennai</option>
                        <% } else if (origin==="Mumbai" ){ %>
                          <option value="Indore">Indore</option>
                          <option value="Delhi">Delhi</option>
                          <option selected value="Mumbai">Mumbai</option>
                          <option value="Pune">Pune</option>
                          <option value="Chennai">Chennai</option>
                          <% } else if (origin==="Pune" ){ %>
                            <option value="Indore">Indore</option>
                            <option value="Delhi">Delhi</option>
                            <option value="Mumbai">Mumbai</option>
                            <option selected value="Pune">Pune</option>
                            <option value="Chennai">Chennai</option>
                            <% } else if (origin==="Chennai" ){ %>
                              <option value="Indore">Indore</option>
                              <option value="Delhi">Delhi</option>
                              <option value="Mumbai">Mumbai</option>
                              <option value="Pune">Pune</option>
                              <option selected value="Chennai">Chennai</option>
                              <% } %>
                  </select>
                </div>
              </div>
              <div class="col-md-6">
                <div class="row no-margin">
                  <div class="col-md-5">
                    <div class="form-group">
                      <span class="form-label">Destination</span>
                      <select id="destination" style="width: 100%;" required name="destination" onchange="verify()"
                        class="form-select cityinput" oninvalid="this.setCustomValidity('Please choose a city')"
                        oninput="setCustomValidity('')">
                        <% if (destination==="Indore" ) { %>
                          <option selected value="Indore">Indore</option>
                          <option value="Delhi">Delhi</option>
                          <option value="Mumbai">Mumbai</option>
                          <option value="Pune">Pune</option>
                          <option value="Chennai">Chennai</option>
                          <% } else if (destination==="Delhi" ){ %>
                            <option value="Indore">Indore</option>
                            <option selected value="Delhi">Delhi</option>
                            <option value="Mumbai">Mumbai</option>
                            <option value="Pune">Pune</option>
                            <option value="Chennai">Chennai</option>
                            <% } else if (destination==="Mumbai" ){ %>
                              <option value="Indore">Indore</option>
                              <option value="Delhi">Delhi</option>
                              <option selected value="Mumbai">Mumbai</option>
                              <option value="Pune">Pune</option>
                              <option value="Chennai">Chennai</option>
                              <% } else if (destination==="Pune" ){ %>
                                <option value="Indore">Indore</option>
                                <option value="Delhi">Delhi</option>
                                <option value="Mumbai">Mumbai</option>
                                <option selected value="Pune">Pune</option>
                                <option value="Chennai">Chennai</option>
                                <% } else if (destination==="Chennai" ){ %>
                                  <option value="Indore">Indore</option>
                                  <option value="Delhi">Delhi</option>
                                  <option value="Mumbai">Mumbai</option>
                                  <option value="Pune">Pune</option>
                                  <option selected value="Chennai">Chennai</option>
                                  <% } %>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <span class="form-label">Departure Date</span>
                      <input readonly="true" class="form-control"
                        style="width: 100%; padding-left: 10px; padding-right: 10px;" name="d_date" autocomplete="off"
                        type="text" id="datepicker" required value="<%= date %>"
                        oninvalid="this.setCustomValidity('Please choose a date')" oninput="setCustomValidity('')">
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-btn">
                  <button style="border-radius: 20px;" class="submit-btn">Modify Search</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>

    <% function myFunction(time){ %>
      <% let a; %>
        <%if (time> "11:59" && time < "23:59" ){ %>
            <% a=" PM" ; %>
              <%} else { %>
                <%a=" AM" ; %>
                  <%} %>
                    <%const final=time + a; %>%>
                      <%return final; %>
                        <%}%>

                          <section id="bus_option" style="margin-top: 0.5rem;">
                            <% if (foundBuses.length===1) { %>
                              <h3 style="margin-bottom: 1.5rem; padding-top: 1rem;" class="text-center">1 bus found</h3>
                              <% } else if (foundBuses.length===0) { %>
                                <div class="container" style="text-align: center;">
                                  <img style="width: 50%;"
                                    src="https://i.ibb.co/XLDW2bR/o-K75m-Lcl1hq8-HGhvzc-R-E-transformed.jpg"
                                    alt="bus-img">
                                  <h4>Oops! No buses found.</h4>
                                  <span style="font-size: 13px;">There are no buses found in this route for the selected
                                    date of journey. Please try a different route or date</span>
                                </div>
                                <% } else { %>
                                  <h3 style="margin-bottom: 2rem; padding-top: 1rem" class="text-center">
                                    <%= foundBuses.length %> Buses found
                                  </h3>
                                  <% } %>
                                    <% foundBuses.forEach(function(bus){ %>
                                      <% if (ct < bus.dep_time ) { %>
                                        <div class="bus_card card mx-auto shadow-sm p-1 mb-4 bg-white rounded">
                                          <% const seatArray=bus.seat; %>
                                            <% let counter=0; for (const obj of seatArray) { if
                                              (obj.seat_status==='enabled' ) counter++; } %>
                                              <div class="card-body">
                                                <h5 style="font-weight: bold;" class="card-title">
                                                  <%= bus.service_no %>
                                                    <a style=" font-size: 0.8rem; font-weight: 600; float: right;">
                                                      <%= counter %> seats left
                                                    </a>
                                                </h5>

                                                <p style="color: #1acc8d; font-size: 2vh; margin-top: 0.5rem;"
                                                  class="card-text">
                                                  <%= bus.bus_type %>
                                                </p>
                                                <% const dep_time=myFunction(bus.dep_time) %>
                                                  <% const arr_time=myFunction(bus.arr_time) %>
                                                    <p style="font-size: 1.8vh; margin-top: 0.1rem;" class="card-text">
                                                      <span style="font-weight: 700;">
                                                        <%= dep_time %>
                                                      </span> &emsp; &emsp; <span
                                                        style="font-weight: 400; font-size: 1.5vh;"><i
                                                          style="margin-right: 3px;"
                                                          class="fa-solid fa-clock fa-xs"></i>
                                                        <%= bus.journeyDuration %>
                                                      </span> &emsp; &emsp;
                                                      <span style="font-weight: 400;">
                                                        <%= arr_time %>
                                                      </span>
                                                    </p>
                                                    <span
                                                      style="font-size: 1.5rem; font-weight: 600; float: right;">&#8377;<%= bus.fare %>
                                                    </span>
                                                    <form action="/seatchoose" method="post">
                                                      <input name="g_service_no" type="hidden"
                                                        value="<%= bus.service_no %>">
                                                      <input name="g_service_id" type="hidden" value="<%= bus._id %>">
                                                      <% if (bus.status===true && counter> 0) { %>
                                                        <button type="submit"
                                                          style="background-color: #01036f; border: none; width: 10rem;"
                                                          class="btn btn-primary shadow">View Seats</button>
                                                        <% } else { %>
                                                          <button disabled
                                                            style="background-color: #777777; border: none; width: 10rem;"
                                                            class="btn btn-primary shadow">View Seats</button>
                                                          <% if (bus.status===false) { %>
                                                            <span
                                                              style="color: red; margin-left: 1rem; font-size: 1.5vh;">Service
                                                              left!</span>
                                                            <% } else { %>
                                                              <span style="color: red; margin-left: 1rem;">Sold
                                                                out!</span>
                                                              <% } %>
                                                                <% } %>
                                                              <span style="margin-left: 10px;"><i id="wifi"  class="amen fa-solid fa-wifi fa-sm"></i> <i id="charging" class="amen fa-solid fa-plug-circle-bolt fa-sm"></i> <i id="bottle" class="amen fa-solid fa-bottle-water fa-sm"></i></span>
                                                    </form>
                                              </div>
                                        </div>
                                        <% } %>
                                          <% }) %>


                          </section>
  </main><!-- End #main -->

